<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <ImageView
        android:src="@drawable/logo3"
        android:id="@+id/sport_img"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:id="@+id/tv_business_name"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:textSize="22sp"
                android:textColor="@color/primary_text"
                android:text="xx体育中心"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_sq"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:src="@mipmap/zan_on"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_join"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/bg_btn_selector"
                android:text="加入运动"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_marginBottom="2dp"
            android:background="@color/main_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:id="@+id/sport_type"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:text="运动类型：篮球"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/time"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="运动时间：5月31日 早上9:00-下午6:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/remain"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:text="剩余个数：9个"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/price"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:text="价格：15元/时"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/address"
            android:layout_marginLeft="15dp"
            android:text="地址：广州市天河区天源路789"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/phone"
            android:layout_marginLeft="15dp"
            android:text="联系方式：13712341234"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_cancel"
        android:visibility="gone"
        android:background="@drawable/bg_btn_selector"
        android:textColor="@color/bg_layout"
        android:layout_margin="15dp"
        android:layout_gravity="bottom|right"
        android:text="取消加入"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>